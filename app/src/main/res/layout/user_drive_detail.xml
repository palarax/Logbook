<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/layout_drives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drive_number"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="@dimen/drive_image_dim"
            android:layout_height="@dimen/drive_image_dim"
            android:src="@drawable/steering_wheel"
            android:layout_margin="@dimen/fab_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of drives" />

    </LinearLayout>

    <!-- had to set dp here as the View wasn't rendering in scrollview -->
    <View
        android:layout_width="1dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/layout_drives"
        android:layout_marginEnd="10dp"
        android:background="@android:color/black" />


    <LinearLayout
        android:id="@+id/layout_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drive_hours"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="@dimen/drive_image_dim"
            android:layout_height="@dimen/drive_image_dim"
            android:src="@drawable/day_night"
            android:layout_margin="@dimen/fab_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day: 10"
                android:layout_marginEnd="@dimen/fab_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night: 10" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>